<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shann.galleriesofjustice">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_goj_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ExhibitActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".QuizActivity"
            android:label="Quiz"
            android:launchMode="singleTop"
            android:parentActivityName=".ExhibitActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shann.galleriesofjustice.ExhibitActivity" />
        </activity>
        <activity
            android:name=".QuizResultActivity"
            android:label="Quiz Result"
            android:launchMode="singleTop"
            android:parentActivityName=".ExhibitActivity">
        </activity>
        <activity
            android:name=".AchievementsActivity"
            android:label="Achievements"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity">
        </activity>
    </application>

</manifest>