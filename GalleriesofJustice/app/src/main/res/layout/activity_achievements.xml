<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_achievements"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shann.galleriesofjustice.AchievementsActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="150dp"
                app:srcCompat="@drawable/lock"
                android:id="@+id/imgBtn1"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_height="@dimen/achievements_imgbtn" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:textSize="18sp"
                android:textAlignment="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/gridview_space" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/gridview_padding">

            <ImageButton
                app:srcCompat="@drawable/lock"
                android:id="@+id/imgBtn2"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_height="@dimen/achievements_imgbtn"
                android:layout_width="@dimen/achievements_imgbtn"
                android:cropToPadding="false" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textAlignment="center"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/gridview_space" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                app:srcCompat="@drawable/lock"
                android:id="@+id/imgBtn3"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_height="@dimen/achievements_imgbtn"
                android:layout_width="@dimen/achievements_imgbtn" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textSize="18sp"
                android:textAlignment="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/gridview_space" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/gridview_padding">

            <ImageButton
                android:layout_height="@dimen/achievements_imgbtn"
                app:srcCompat="@drawable/lock"
                android:id="@+id/imgBtn4"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_width="@dimen/achievements_imgbtn"/>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textAlignment="center"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/gridview_space" />
        </LinearLayout>

    </GridLayout>

</RelativeLayout>
